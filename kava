#!/bin/bash

source $HOME/.config/kava/config

getCover () {
    cover=$(get-cover "$(mpc current -f %artist%)" "$(mpc current -f %album%)")
    cd "$mpdpath"/"$dir"
    if [[ $cover == "Fetch error." ]]; then
        convert -resize "$size" "$noimage" /tmp/cover.png
        convert -size "$res" "$image" -page "$coordinates" /tmp/cover.png -layers flatten "$wallpaper"
        feh --bg-scale "$wallpaper"
    else
        wget "$cover" -O cover
    fi
    if [[ $(file --mime-type cover | awk '{ print $NF }') == "image/png" ]]; then
        mv cover cover.png
        cp cover.png /tmp/cover.png
        mogrify -resize "$size" /tmp/cover.png
        convert -size "$res" "$image" -page "$coordinates" /tmp/cover.png -layers flatten "$wallpaper"
        feh --bg-scale "$wallpaper"
        rm /tmp/cover.png
    elif [[ $(file --mime-type cover | awk '{ print $NF }') == "image/jpeg" ]]; then
        mv cover cover.jpg
        cp cover.jpg /tmp/cover.jpg
        mogrify -resize "$size" /tmp/cover.jpg
        convert -size "$res" "$image" -page "$coordinates" /tmp/cover.jpg -layers flatten "$wallpaper"
        feh --bg-scale "$wallpaper"
        rm /tmp/cover.jpg
    fi
}


main () {
    while true; do
    mpc idle player
    sleep 1

    if [[ -z $(mpc current) ]]; then
        convert -resize "$size" "$noimage" /tmp/cover.png
        convert -size "$res" "$image" -page "$coordinates" /tmp/cover.png -layers flatten "$wallpaper"
        feh --bg-scale "$wallpaper"
    else
        dir="$(dirname "$(mpc current --format %file%)")"
        cd "$mpdpath"/"$dir"
        if [[ -a cover.png ]]; then
            cp cover.png /tmp/cover.png
            mogrify -resize "$size" /tmp/cover.png
            convert -size "$res" "$image" -page "$coordinates" /tmp/cover.png -layers flatten "$wallpaper"
            feh --bg-scale "$wallpaper"
            rm /tmp/cover.png
        elif [[ -a folder.jpg ]]; then
            mv folder.jpg cover.jpg
            cp cover.jpg /tmp/cover.jpg
            mogrify -resize "$size" /tmp/cover.jpg
            convert -size "$res" "$image" -page "$coordinates" /tmp/cover.jpg -layers flatten "$wallpaper"
            feh --bg-scale "$wallpaper"
            rm /tmp/cover.jpg
        elif [[ -a cover.jpg ]]; then
            cp cover.jpg /tmp/cover.jpg
            mogrify -resize "$size" /tmp/cover.jpg
            convert -size "$res" "$image" -page "$coordinates" /tmp/cover.jpg -layers flatten "$wallpaper"
            feh --bg-scale "$wallpaper"
            rm /tmp/cover.jpg
        else
            getCover
        fi
    fi
    done
}

reset () {
    if [[ -z $(mpc current) ]]; then
        convert -size "$res" "$image" -page "$coordinates" "$noimage" -layers "$wallpaper"
        feh --bg-scale "$wallpaper"
    else
        dir="$(dirname "$(mpc current --format %file%)")"
        cd "$mpdpath"/"$dir"
        mv folder.jpg cover.jpg
        mv folder.png cover.png
        mv cover.png cover.png.bak
        mv cover.jpg cover.jpg.bak
        getCover
        if [[ -a cover.png ]]; then
            rm -f cover.png.bak
        else
            rename .png.bak '.png' *.bak
        fi
        if [[ -a cover.jpg ]]; then
            rm -f cover.jpg.bak
        else
            rename .jpg.bak '.jpg' *.bak
        fi
    fi
}

if [[ $1 == reset ]]; then
    reset
else
    main
fi
